{
  "name": "Bismark-ENCODE-WGBS",
  "title": "Bismark-ENCODE-WGBS",
  "summary": "Pipeline step [ Extracting Methylation ] for ENCODE WGBS analysis using Bismark",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "categories": [
    "DNA Methylation"
  ],
  "inputSpec": [
    {
      "name": "genome",
      "label": "A genome",
      "class": "file",
      "optional": false,
      "patterns": ["*.bz2"]
      },
    {
      "name": "reads",
      "label": "The reads that ought to be methylated",
      "class": "array:file",
      "optional": false,
      "patterns": ["*.bz2"]
    }
  ],
  "outputSpec": [
    {
      "name": "CG",
      "label": "CG methyation BED file",
      "class": "file"
    },
    {
      "name": "CHG",
      "label": "CHG methyation BED file",
      "class": "file"
    },
    {
      "name": "CHH",
      "label": "CHH methyation BED file",
      "class": "file"
    },
    {
      "name": "mapped_reads",
      "label": "the sam file",
      "class": "file"
    },
    {
      "name": "SE_report",
      "label": "QC report 1 (SE)",
      "class": "file"
    },
    {
      "name": "M_bias_report",
      "label": "QC report 2 (M-Bias)",
      "class": "file"
    }
  ],
  "runSpec": {
    "interpreter": "bash",
    "file": "src/Bismark-ENCODE-WGBS.sh",
    "systemRequirements": {
      "main": {
        "instanceType": "mem3_hdd2_x2"
      },
      "myEntryPoint": {
        "instanceType": "mem3_hdd2_x2"
      }
    }
  },
  "authorizedUsers": []
}
